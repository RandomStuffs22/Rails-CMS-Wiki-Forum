<div class="container">
  <div class="span-24 last">
    <div class="header">
      <%= top_menu %>
    </div>
  </div>

  <div class="column span-6">
    <div class="side_pane">
      <div class="logo_box"><%= logo_image %></div>

      <div class="side_menu">
        <%= side_menu %>
      </div>
      <div class="user_box">
        <%# defaults:
            user_box :include_line_breaks => true, :include_blog_link => true, 
                :include_events_link => true, :link_seperator => ' | ' %>
        <%= user_box %>
      </div>
    </div>
  </div>

  <div class="span-18 last">
    <%= flash_messages %>

    <div class="base_content">
      <%= yield %>
    </div>
  </div>

  <div class="span-24 last">
    <div class="footer">
      <%= site_footer %>
    </div>
  </div>
</div>
