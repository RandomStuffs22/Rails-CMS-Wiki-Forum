<div class="container">
  <div class="span-24 last">
    <div class="header">
      <%= top_menu %>
    </div>
  </div>

  <div class="column span-6">
    <div class="side_pane">
      <div class="logo_box"><%= logo_image %></div>

      <div class="side_menu">
        <%= side_menu %>
      </div>
      <div class="user_box">
        <%= user_box %>
      </div>
    </div>
  </div>

  <div class="span-18 last">
    <%= flash_messages %>

    <div class="base_content">
      <%= render :partial => '/layouts/flash_boxes' %>

      <%= yield %>
    </div>
  </div>

  <div class="span-24 last">
    <div class="footer">
      <%= site_footer %>
    </div>
  </div>
</div>
