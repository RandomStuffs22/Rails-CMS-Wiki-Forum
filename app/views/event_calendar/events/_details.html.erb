<div class="span-12 last">
<p>
  <strong>Topic:</strong> <%= details.topic %>
</p>
<%- unless details.one_day? %>
  <%= textilize(details.location) %>
  <%= textilize(details.description) %>
<%- else -%>
  <%= textilize(details.location) %>
  <%= textilize(details.description) %>
  <p><%= event_times(details) %></p>
<%- end -%>  
</div>

