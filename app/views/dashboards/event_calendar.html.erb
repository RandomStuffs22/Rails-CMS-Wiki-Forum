<h1><%= link_to "Event Calendar", events_path %> Dashboard</h1>

<%= link_to_new_event %>

<p><em>Future Events: <%= Event.future.count %> | Past Events: <%= Event.past.count %></em></p>

<ul>
  <% @events.group_by(&:start_year).each do |year, years_events| %>
  <li><%= year %>
    <ul>      
      <% years_events.group_by(&:start_month).each do |month, months_events| %>
      <li><%= month %>
        <ul>
          <% months_events.each do |event| %>
          <li><%= link_to event.name, event_path(event) %></li>
          <% end %>
        </ul>
      </li>
      <% end %>
    </ul>
  </li>
  <% end %>
</ul>