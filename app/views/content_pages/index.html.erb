<h1>Listing content_pages</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Body</th>
    <th>Category</th>
  </tr>

<% @content_pages.each do |content_page| %>
  <tr>
    <td><%=h content_page.name %></td>
    <td><%=h content_page.body %></td>
    <td><%=h content_page.category_id %></td>
    <td><%= link_to 'Show', content_page %></td>
    <td><%= link_to 'Edit', edit_content_page_path(content_page) %></td>
    <td><%= link_to 'Destroy', content_page, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New content_page', new_content_page_path %>